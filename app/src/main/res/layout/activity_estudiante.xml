<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.activitats.silvia.actividad5a.Estudiante">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="nombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEdad"
        android:layout_below="@+id/etNom"
        android:layout_alignParentStart="true"
        android:text="edad" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCiclo"
        android:layout_below="@+id/etEdad"
        android:layout_alignParentStart="true"
        android:text="ciclo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCurso"
        android:layout_below="@+id/etCiclo"
        android:layout_alignParentStart="true"
        android:text="curso" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNota"
        android:layout_below="@+id/etCurso"
        android:layout_alignParentStart="true"
        android:text="nota media" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:id="@+id/bRegEst"
        android:layout_below="@+id/etNota"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />
</RelativeLayout>
